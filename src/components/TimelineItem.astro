---
const { description, title, period } = Astro.props;
---

<li class="mb-10 ms-4">
  <div
    class="absolute -start-1.5 mt-1.5 h-3 w-3 rounded-full border border-primary bg-gray-200"
  >
  </div>
  <time class="mb-1 text-sm font-normal leading-none text-secondary">
    {period}
  </time>
  <h3 class="text-lg font-semibold text-primary">
    {title}
  </h3>
  <p class="text-base font-normal text-secondary">
    {description}
  </p>
</li>
