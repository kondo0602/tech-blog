---
import clsx from "clsx";

type Props = {
  link: string;
  period: string;
  title: string;
  description: string;
};

const { link, period, title, description } = Astro.props;
---

<li class="mb-10 ms-4">
  <div
    class="absolute -start-1.5 mt-1.5 h-3 w-3 rounded-full border border-primary bg-gray-200"
  >
  </div>
  <time class="mb-1 text-sm font-normal leading-none text-secondary">
    {period}
  </time>
  <a href={link} target="_blank" rel="noopener noreferrer">
    <div class={clsx(["rounded-sm"], ["hover:bg-backgroundPale"])}>
      <h3 class="text-lg font-semibold text-primary">
        {title}
      </h3>
      <p class="text-base font-normal text-secondary">
        {description}
      </p>
    </div>
  </a>
</li>
