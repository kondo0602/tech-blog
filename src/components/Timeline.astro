---
import TimelineItem from "@components/TimelineItem.astro";
interface Props {
  items: {
    link: string;
    period: string;
    title: string;
    description: string;
  }[];
}

const { items } = Astro.props;
---

<ol class="relative border-l border-gray-200 dark:border-gray-700">
  {
    items.map((item) => (
      <TimelineItem
        link={item.link}
        period={item.period}
        title={item.title}
        description={item.description}
      />
    ))
  }
</ol>
