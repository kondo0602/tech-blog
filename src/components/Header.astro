---
import clsx from "clsx";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<header
  class="sticky top-0 flex h-16 justify-between py-4 pl-4 pr-8 backdrop-blur-lg"
>
  <div class="flex items-center gap-2">
    <a href="/">
      <span class="text-primary">Kondo Shun</span>
    </a>
    <span class="text-secondary">/</span>
    <span class="text-primary">{title}</span>
    <button popovertarget="header-menu">
      <svg
        class="text-primary sm:hidden"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke="currentColor"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M6 9L12 15L18 9"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
        </path>
      </svg>
    </button>
  </div>
  <div
    popover
    id="header-menu"
    class="absolute inset-0 left-48 top-16 m-0 bg-slate-900 text-primary"
  >
    <ul class="flex flex-col gap-2">
      <li>
        <a href="/">
          <span class="text-primary">Posts</span>
        </a>
        <li>
          <a href="/">
            <span class="text-primary">Posts</span>
          </a>
        </li>
        <li>
          <a href="/">
            <span class="text-primary">Posts</span>
          </a>
        </li>
      </li>
    </ul>
  </div>
  <nav class="hidden items-center justify-between sm:flex">
    <div class="flex gap-4">
      <a href="/">
        <span
          class={clsx(
            "/" === Astro.url.pathname && "text-accent",
            "/" !== Astro.url.pathname && "text-primary",
          )}
        >
          Posts
        </span>
      </a>
      <a href="/tags">
        <span
          class={clsx(
            "/tags" === Astro.url.pathname && "text-accent",
            "/tags" !== Astro.url.pathname && "text-primary",
          )}
        >
          Tags
        </span>
      </a>
      <a href="/works">
        <span
          class={clsx(
            "/works" === Astro.url.pathname && "text-accent",
            "/works" !== Astro.url.pathname && "text-primary",
          )}
        >
          Works
        </span>
      </a>
      <a href="/about">
        <span
          class={clsx(
            "/about" === Astro.url.pathname && "text-accent",
            "/about" !== Astro.url.pathname && "text-primary",
          )}
        >
          About
        </span>
      </a>
    </div>
  </nav>
</header>
