---
import { ViewTransitions } from "astro:transitions";
import Header from "@components/Header.astro";

const { title } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | Kondo Shun</title>
    <ViewTransitions />
  </head>
  <body class="bg-background">
    <Header title={title} />
    <section class="mx-auto max-w-3xl px-4">
      <div class="space-y-2 border-b border-secondary pb-8 pt-6">
        <h1
          class="text-3xl font-extrabold leading-9 tracking-tight text-slate-200"
        >
          {title}
        </h1>
      </div>
      <article>
        <slot />
      </article>
    </section>
  </body>
</html>
